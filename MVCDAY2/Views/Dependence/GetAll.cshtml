<body>
    <h2>data Dependence</h2>
    <p style="text-align:center ;color :purple">@TempData["msg"]</p>
    @foreach (var item in Model)
    {
        <a href="Edit/@item.Id" style="text-decoration:none">
            <div class="card mb-2 " style="width: 18rem">
                <ul>
                    <li>Name: @item.Name</li>
                    <li>Gender: @item.Sex</li>
